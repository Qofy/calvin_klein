{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["svelte"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["app/src/**/*", "app/src/**/*.svelte"]
}